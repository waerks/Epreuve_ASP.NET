@model UI.Models.Jeu.JeuDetail

@{
	ViewData["Title"] = Model.JeuName;
}

<div class="container mt-5">
	<div class="row">
		<!-- Infos principales -->
		<div class="col-md-8">
			<h1 class="display-4 fw-bold">🎲 @Model.JeuName</h1>
			<p class="lead text-muted">@Model.Description</p>

			<div class="game-details mt-4">
				<h5><span class="badge bg-primary">👶 Âge : @Model.AgeMinimum - @Model.AgeMaximum</span></h5>
				<h5><span class="badge bg-success">🎭 Joueurs : @Model.NbJoueurMin - @Model.NbJoueurMax</span></h5>
				<h5><span class="badge bg-warning">⏳ Temps de jeu : @(Model.DureeMinute > 0 ? Model.DureeMinute + " min" : "⚡ Rapide")</span></h5>
				<h5><span class="badge bg-dark">📅 Créé le : @Model.DateCreation.ToShortDateString()</span></h5>
			</div>

